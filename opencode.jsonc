{
    "$schema": "https://opencode.ai/config.json",
    "permission": {
        "bash": {
            "*": "ask",
            "git": "allow",
            "git add": "deny",
            "git push": "ask",
            "npm run build": "allow",
            "ls": "allow",
            "pwd": "allow",
        },
    },
    "command": {
        "snyk": {
            "template": "Run `snyk test` to check for security vulnerabilities.",
            "description": "Run Snyk security test",
            "agent": "build",
        },
    },
    "tools": {
        "laravel-boost": true,
        "read": true,
        "write": true,
        "edit": true,
        "list": true,
        "grep": true,
        "glob": true,
        "bash": true,
        "task": true,
        "todowrite": true,
        "todoread": true,
        "websearch": true,
        "codesearch": true,
        "webfetch": true,
    },
    "mcp": {
        "snyk": {
            "type": "local",
            "enabled": true,
            "command": [
                "snyk",
                "mcp",
                "-t",
                "stdio"
            ],
        },
    },
}
